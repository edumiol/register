{
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit tests --colors=always --testdox",
    "phpstan": "./vendor/bin/phpstan analyse --level max tests",
    "php-cs-fixer": "./vendor/bin/php-cs-fixer fix src",
    "coverage": "./vendor/bin/phpunit tests --colors=always --testdox --coverage-clover coverage.xml"
  },
  "require": {
    "php": "8.1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",    
    "phpstan/phpstan": "^1.6",
    "friendsofphp/php-cs-fixer": "^3.8"
  }
}
