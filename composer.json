{
  "autoload": {
    "classmap": ["src/"]
  },
  "scripts": {
    "test": "./vendor/bin/phpunit test --colors=always --testdox",
    "php-cs-fixer" : "./vendor/bin/php-cs-fixer fix src",
    "phpstan" : "./vendor/bin/phpstan analyse --level max test"
  },
  "require": {
    "php": "8.1.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^1.4",
    "friendsofphp/php-cs-fixer": "^3.8"
  }
}